  var $d = $(elem).closest('.dropdown');
  var w_name = $(elem).find('.wname').text();
  var vid = parseInt($(elem).attr('vid'));
  $d.find('.dropdown_btn').text(w_name);
  var $hh = $('.dropdown_hidden_val[name="cities_warehouses_id"]');
  $hh.val(vid);
  return false;
}

